<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<StackPane xmlns:fx="http://javafx.com/fxml" stylesheets="@/app.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
<VBox alignment="CENTER" spacing="10"  >
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    <ImageView fitWidth="100" fitHeight="100" >
        <Image url="@/coffee-cup.png"></Image>
    </ImageView>
    <StackPane styleClass="background">
        <Label fx:id="message" text="Coffee Machine" style="-fx-font-size: 24px;" />
    </StackPane>

    <GridPane hgap="20" vgap="20" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints percentWidth="50" />
            <ColumnConstraints percentWidth="50" />
        </columnConstraints>
        <Button maxWidth="Infinity"  fx:id="espressoButton"  GridPane.rowIndex="0" GridPane.columnIndex="0">

            <graphic>
                <VBox alignment="CENTER" spacing="5">
                    <HBox alignment="CENTER" spacing="25">
                        <ImageView fx:id="espressoImage" fitWidth="50" fitHeight="50" />

                        <Label styleClass="coffeeName" text="Espresso"></Label>
                    </HBox>

                <HBox alignment="BOTTOM_CENTER" spacing="5">

                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@/milk.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="espressoMilk" />
                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@/water.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="espressoWater" />
                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@/beans.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="espressoBean" />
                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@/cash.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="espressoPrice" />
                </HBox>
                </VBox>
            </graphic>
        </Button>

        <Button maxWidth="Infinity"  fx:id="cappuccinoButton" GridPane.rowIndex="0" GridPane.columnIndex="1">
            <graphic>
                <VBox alignment="CENTER" spacing="5">
                <HBox alignment="CENTER" spacing="25">
                    <ImageView fx:id="cappuccinoImage" fitWidth="50" fitHeight="50" />
                    <Label styleClass="coffeeName" text="Cappuccino"></Label>
                </HBox>
                <HBox alignment="BOTTOM_CENTER" spacing="5">
                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@/milk.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="cappuccinoMilk" />
                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@/water.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="cappuccinoWater" />
                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@/beans.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="cappuccinoBean" />
                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@/cash.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="cappuccinoPrice" />
                </HBox>
                </VBox>
            </graphic>
        </Button>

        <Button maxWidth="Infinity"  fx:id="latteButton" GridPane.rowIndex="1" GridPane.columnIndex="0">
            <graphic>
                <VBox alignment="CENTER" spacing="5">
                <HBox alignment="CENTER" spacing="25">
                    <ImageView fx:id="latteImage" fitWidth="50" fitHeight="50" />

                    <Label styleClass="coffeeName" text="Latte"></Label>
                </HBox>
                <HBox alignment="BOTTOM_CENTER" spacing="5">
                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@/milk.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="latteMilk" />
                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@/water.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="latteWater" />
                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@/beans.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="latteBean" />
                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@/cash.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="lattePrice" />
                </HBox>
                </VBox>
            </graphic>
        </Button>

        <Button maxWidth="Infinity"  fx:id="backButton" text="Back" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <graphic>
                <ImageView fx:id="backImage" fitWidth="50" fitHeight="50" />
            </graphic>
            <font>
                <Font name="Arial" size="18" />
            </font>
        </Button>

    </GridPane>


    <!-- Add other buttons with their icons similarly -->
</VBox>
</StackPane>