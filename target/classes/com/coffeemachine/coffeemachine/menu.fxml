<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>
<StackPane xmlns:fx="http://javafx.com/fxml" stylesheets="@/app.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
<VBox alignment="CENTER" spacing="10" >
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    <ImageView fx:id="mainIcon" fitWidth="100" fitHeight="100" />
    <StackPane id="label" styleClass="background">
        <Label  text="Coffee Machine" style="-fx-font-size: 24px;" />
    </StackPane>

    <GridPane hgap="20" vgap="20" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints percentWidth="50" />
            <ColumnConstraints percentWidth="50" />
        </columnConstraints>
        <Button maxWidth="Infinity" fx:id="buyButton" text="Buy" GridPane.rowIndex="0" GridPane.columnIndex="0">
            <graphic>
                <ImageView fx:id="buyIconImageView" fitWidth="50" fitHeight="50" />
            </graphic>
            <font>
                <Font name="Arial" size="18" />
            </font>
        </Button>

        <Button maxWidth="Infinity"  fx:id="fillButton" text="Fill" GridPane.rowIndex="0" GridPane.columnIndex="1">
            <graphic>
                <ImageView fx:id="fillIconImageView" fitWidth="50" fitHeight="50" />
            </graphic>
            <font>
                <Font name="Arial" size="18" />
            </font>
        </Button>

        <Button maxWidth="Infinity"  fx:id="withDrawButton" text="Withdraw" GridPane.rowIndex="1" GridPane.columnIndex="0">
            <graphic>
                <ImageView fx:id="withDrawIconImageView" fitWidth="50" fitHeight="50" />
            </graphic>
            <font>
                <Font name="Arial" size="18" />
            </font>
        </Button>

        <Button maxWidth="Infinity"  fx:id="statusButton" text="Status" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <graphic>
                <ImageView fx:id="statusIconImageView" fitWidth="50" fitHeight="50" />
            </graphic>
            <font>
                <Font name="Arial" size="18" />
            </font>
        </Button>

    </GridPane>


    <!-- Add other buttons with their icons similarly -->
</VBox>
</StackPane>
